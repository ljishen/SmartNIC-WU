#!/usr/bin/env bash

set -euo pipefail

if ! command -v iperf3 >/dev/null 2>&1; then
  echo "[ERROR] Please first install iperf3" >&2
  exit 1
fi

rm -f iperf3_*.log

PIDS=()

for id in {32..35}; do
  port=510"$id"
  logfile=iperf3_"$port".log

  iperf3 \
    --port "$port" \
    --client 10.10.1.2 \
    --bind 10.10.1.1 \
    --interval 0 \
    --affinity "$id" \
    --logfile "$logfile" \
    --forceflush \
    --udp \
    --bitrate 0 \
    --time 10 \
    --length 65507 \
    --parallel 4 \
    --set-mss 9216 \
    --zerocopy \
    --omit 2 \
    --repeating-payload \
    --title "stream_$port" &

  PIDS+=($!)
done

echo
echo "Waiting for processes to finish..."
for PID in "${PIDS[@]}"; do
  wait "$PID"
done
echo "Done!"

echo
find . -type f -name '*.log' -exec awk '$2 ~ /SUM/ { print $0; exit }' {} \;
